{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "module": "es2022",
    "moduleResolution": "bundler",
    "noEmit": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "verbatimModuleSyntax": true
  },
  "include": ["./src/"],
  "exclude": ["**/*.spec.ts"]
}
